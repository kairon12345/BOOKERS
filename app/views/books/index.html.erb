<div class=index_body>

  <div class=flash>
    <%=flash[:notice]%>
  </div>

  <h1>Books</h1>

<table>
  <thead>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
<% @books.each do |f| %>

    <tr>
        <td>
            <%= f.title %>
        </td>
        <td>
            <%=f.body %>
        </td>
          <td>
            <%=link_to "Show",book_path(f.id),class:"link"%>
          </td>
          <td>
          <%=link_to"Edit",edit_book_path(f.id),class:"link"%>
          </td>
          <td>
          <%=link_to"Destroy",book_path(f.id),method: :delete, data:{confirm:"are you sure?"},class:"link" %>
          </td>
    </tr>
<% end %>
</tbody>

</table>

<h2>New book</h2>

<% if @book.errors.any?%>

<div class=error>
  <p class=error_title>2 errors prohibited this book from being saved:</p>
  <ul class=error_form>
       <%=@book.errors.full_messages.each do |message|%>
    <li class=error_message>
       <%=message%>
    </li>
        <%end%>
  </ul>
</div>
<%end%>

<div class=form>
    <%= form_with model:@book, local:true do |book| %>

    <div class=form_box>

      <%=book.label :title,'Title'%>
          <div class=form_title>
              <%= book.text_field :title %>
          </div>

    </div>

    <div class=form_box>
      <%=book.label :body,'Body'%>

          <div class=form_body>
              <%= book.text_area :body %>
          </div>

    </div>

    <div class=form_box>
      <%= book.submit 'Create Book' %>
    </div>

    <%end%>
</div>

</div>